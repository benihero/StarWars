<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/starwars">

    <ImageView
        android:layout_width="285dp"
        android:layout_height="114dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo"
        android:layout_weight="0.22"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Films"
            android:id="@+id/btnFilm"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginRight="5dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/cardview_light_background"
            android:onClick="btnFilm_onClick" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="People"
            android:id="@+id/btnPeople"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/cardview_light_background"
            android:onClick="btnPeople_onClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Planets"
            android:layout_marginRight="10dp"
            android:id="@+id/btnPlanet"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/cardview_light_background"
            android:onClick="btnPlanet_onClick" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Species"
            android:id="@+id/btnSpecie"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/cardview_light_background"
            android:onClick="btnSpecie_onClick" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnStarship"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorPrimaryDark"
            android:onClick="btnStarship_onClick"
            android:text="Starships"
            android:textColor="@color/cardview_light_background" />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Vehicles"
            android:id="@+id/btnVehicle"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/cardview_light_background"
            android:onClick="btnVehicle_onClick" />

    </LinearLayout>







</LinearLayout>